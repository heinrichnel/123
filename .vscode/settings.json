{
  // Sê VS Code dat Tailwind in hierdie tale geld
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascript",
    "javascriptreact": "javascript",
    "typescript": "javascript",
    "typescriptreact": "javascript",
    "css": "css"
  },
  // Skakel standaard CSS-validasie af (anders bly die “unknown at rule” waarskuwings)
  "css.validate": false,
  "postcss.validate": false
}
